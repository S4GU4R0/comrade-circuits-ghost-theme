<script>
// Early 2000s style JavaScript
function randomSite() {
    const sites = document.querySelectorAll('.site-card a');
    if (sites.length > 0) {
        const randomIndex = Math.floor(Math.random() * sites.length);
        sites[randomIndex].click();
    }
}

function nextSite() {
    const sites = document.querySelectorAll('.site-card a');
    if (sites.length > 0) {
        const randomIndex = Math.floor(Math.random() * sites.length);
        sites[randomIndex].click();
    }
}

// Blinking cursor animation
setInterval(function() {
    const cursor = document.querySelector('.cursor');
    if (cursor) {
        cursor.style.opacity = cursor.style.opacity == '0' ? '1' : '0';
    }
}, 500);
</script>