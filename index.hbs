{{!< default}}
<div class="flex flex-col items-center justify-center min-h-[80vh] px-4 py-12 gap-12">
  <!-- Hero Section -->
  <section class="flex flex-col items-center p-8 mx-auto w-full max-w-2xl text-center hero bg-base-200 rounded-box">
    <div class="flex flex-col items-center hero-content">
      <h1 class="mb-4 text-4xl font-bold md:text-5xl">Seize the means of information</h1>
      <p class="mb-6 max-w-xl text-lg md:text-xl">A community of innovators, creators, and technologists building the future together.</p>
      <a href="/#/portal/" class="btn btn-primary btn-lg">Become a Member</a>
    </div>
  </section>

  <!-- About/Mission Section -->
  <section class="p-6 mx-auto w-full max-w-xl text-center shadow bg-base-100 rounded-box">
    <h2 class="mb-2 text-2xl font-semibold">Our Mission</h2>
    <p class="text-base opacity-80 md:text-lg">We empower collaboration, learning, and open-source projects. Whether you’re a developer, designer, or enthusiast, you’ll find your place here.</p>
  </section>

  <!-- Member Benefits Section -->
  <section class="flex flex-col gap-6 p-6 mx-auto w-full max-w-2xl text-center shadow bg-base-100 rounded-box">
    <h2 class="mb-4 text-2xl font-semibold">Member Benefits</h2>
    <div class="grid gap-4 sm:grid-cols-2">
      <div class="items-center p-4 card bg-base-200">
        <div class="mb-2 avatar">
          <div class="flex justify-center items-center w-12 rounded-full bg-primary text-primary-content">
            <!-- Group/Community Icon -->
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="7" r="4"/><path d="M17 11v-1a4 4 0 1 0-8 0v1"/><rect x="3" y="14" width="18" height="6" rx="3"/></svg>
          </div>
        </div>
        <h3 class="mb-1 font-bold">Access to Open Source Software</h3>
        <p class="text-sm opacity-80">Members get access to a curated library of open source apps and tools for resistance, assistance, fun, and more.</p>
      </div>
      <div class="items-center p-4 card bg-base-200">
        <div class="mb-2 avatar">
          <div class="flex justify-center items-center w-12 rounded-full bg-secondary text-secondary-content">
            <!-- Shop/Store Icon -->
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2l1.5 4.5h9L18 2"/><rect x="3" y="6.5" width="18" height="13.5" rx="2"/><path d="M16 10a4 4 0 0 1-8 0"/></svg>
          </div>
        </div>
        <h3 class="mb-1 font-bold">Sliding Scale Shop</h3>
        <p class="text-sm opacity-80">Affordable software, hardware, and repair services for members. Prices are pay-what-you-can after base production cost.</p>
      </div>
      <div class="items-center p-4 card bg-base-200">
        <div class="mb-2 avatar">
          <div class="flex justify-center items-center w-12 rounded-full bg-accent text-accent-content">
            <!-- Recycling Icon -->
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 7l-3-3-3 3"/><path d="M17 4v9a4 4 0 0 1-4 4H7"/><path d="M3 17l3 3 3-3"/><path d="M7 20v-9a4 4 0 0 1 4-4h6"/></svg>
          </div>
        </div>
        <h3 class="mb-1 font-bold">E-waste Recycling</h3>
        <p class="text-sm opacity-80">Members can send their old or broken electronics or table-top appliances for responsible repair or recycling.</p>
      </div>
      <div class="items-center p-4 card bg-base-200">
        <div class="mb-2 avatar">
          <div class="flex justify-center items-center w-12 rounded-full bg-info text-info-content">
            <!-- Support/Education Icon -->
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M9.09 9a3 3 0 1 1 5.82 0c0 1.657-1.343 3-3 3v2"/><circle cx="12" cy="17" r="1"/></svg>
          </div>
        </div>
        <h3 class="mb-1 font-bold">Tech Support & Education</h3>
        <p class="text-sm opacity-80">Get help with your devices and learn new skills through workshops, guides, and one-on-one support.</p>
      </div>
      <div class="items-center p-4 card bg-base-200">
        <div class="mb-2 avatar">
          <div class="flex justify-center items-center w-12 rounded-full bg-success text-success-content">
            <!-- App Store Icon -->
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="7" width="18" height="13" rx="2"/><path d="M16 3v4"/><path d="M8 3v4"/><path d="M3 11h18"/></svg>
          </div>
        </div>
        <h3 class="mb-1 font-bold">Community Software Store</h3>
        <p class="text-sm opacity-80">Discover, share, and request software in our member-driven app store, focused on open and ethical tech.</p>
      </div>
    </div>
  </section>

  <!-- Posts Section -->
  <div class="gh-postfeed grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 pb-[8vmin]">
    {{#foreach posts}}
      <div class="h-full shadow-xl card bg-base-100">
        {{#if feature_image}}
          <figure class="overflow-hidden aspect-video">
            <img src="{{img_url feature_image size="m"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" class="object-cover w-full h-full" />
          </figure>
        {{/if}}
        <div class="items-center text-center card-body">
          <span class="mb-2 text-xs opacity-70"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> &bull; {{reading_time}}</span>
          <h2 class="mb-2 card-title">{{title}}</h2>
          <p class="mb-4">{{excerpt}}</p>
          <div class="justify-center card-actions">
            <a href="{{url}}" class="btn btn-primary">Read more</a>
          </div>
        </div>
      </div>
    {{/foreach}}
  </div>
  {{!-- If JS isn't enabled, fallback to standard pagination --}}
  <noscript>
    <div class="gh-pagination flex justify-between m-[4vmin]">
      {{pagination}}
    </div>
  </noscript>

</div>
