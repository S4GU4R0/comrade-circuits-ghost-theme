<div class="gh-postfeed grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 pb-[8vmin]">
    {{#get "posts" filter="tag:{{tag-slug}}" limit="5"}}
    {{#foreach posts}}
    <div class="h-full shadow-xl card bg-base-100">
        {{#if feature_image}}
        <figure class="overflow-hidden aspect-video">
            <img src="{{img_url feature_image size=" m"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                class="object-cover w-full h-full" />
        </figure>
        {{/if}}
        <div class="items-center text-center card-body">
            <span class="mb-2 text-xs opacity-70"><time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="D MMM
                    YYYY"}}</time> &bull; {{reading_time}}</span>
            <h2 class="mb-2 card-title">{{title}}</h2>
            <p class="mb-4">{{excerpt}}</p>
            <div class="justify-center card-actions">
                <a href="{{url}}" class="btn btn-primary">Learn More</a>
            </div>
        </div>
    </div>
    {{/foreach}}
    {{/get}}
</div>