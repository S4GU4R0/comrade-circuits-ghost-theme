{{!-- Benefits data partial - include in your main template with {{> "benefits-data"}} --}}
{{#with (hash
  benefits=(array
    (hash 
      title="Access to Open Source Software" 
      description="Members get access to a curated library of open source apps and tools for resistance, assistance, fun, and more."
      color="primary"
      icon='<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="7" r="4" /><path d="M17 11v-1a4 4 0 1 0-8 0v1" /><rect x="3" y="14" width="18" height="6" rx="3" /></svg>'
    )
    (hash 
      title="Sliding Scale Shop" 
      description="Affordable software, hardware, and repair services for members. Prices are pay-what-you-can after base production cost."
      color="secondary"
      icon='<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2l1.5 4.5h9L18 2" /><rect x="3" y="6.5" width="18" height="13.5" rx="2" /><path d="M16 10a4 4 0 0 1-8 0" /></svg>'
    )
    (hash 
      title="E-waste Recycling" 
      description="Members can send their old or broken electronics or table-top appliances for responsible repair or recycling."
      color="accent"
      icon='<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 7l-3-3-3 3" /><path d="M17 4v9a4 4 0 0 1-4 4H7" /><path d="M3 17l3 3 3-3" /><path d="M7 20v-9a4 4 0 0 1 4-4h6" /></svg>'
    )
    (hash 
      title="Tech Support & Education" 
      description="Get help with your devices and learn new skills through workshops, guides, and one-on-one support."
      color="info"
      icon='<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10" /><path d="M9.09 9a3 3 0 1 1 5.82 0c0 1.657-1.343 3-3 3v2" /><circle cx="12" cy="17" r="1" /></svg>'
    )
    (hash 
      title="Community Software Store" 
      description="Discover, share, and request software in our member-driven app store, focused on open and ethical tech."
      color="success"
      icon='<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="7" width="18" height="13" rx="2" /><path d="M16 3v4" /><path d="M8 3v4" /><path d="M3 11h18" /></svg>'
    )
  )
)}}

<section class="flex flex-col gap-6 p-6 mx-auto w-full max-w-2xl text-center shadow bg-base-100 rounded-box">
    <h2 class="mb-4 text-2xl font-semibold">Member Benefits</h2>
    <div class="grid gap-4 sm:grid-cols-2">
        {{#each benefits}}
        <div class="items-center p-4 card bg-base-200">
            <div class="mb-2 avatar">
                <div class="flex justify-center items-center w-12 rounded-full bg-{{color}} text-{{color}}-content">
                    {{{icon}}}
                </div>
            </div>
            <h3 class="mb-1 font-bold">{{title}}</h3>
            <p class="text-sm opacity-80">{{description}}</p>
        </div>
        {{/each}}
    </div>
</section>

{{/with}}